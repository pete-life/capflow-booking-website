---
interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const { title, description = 'Capacity-based booking and reservation system for activity-based businesses. Built for Shopify.', ogImage } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="description" content={description} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:type" content="website" />
  <meta property="og:url" content={Astro.url.href} />
  {ogImage && <meta property="og:image" content={ogImage} />}
  <meta name="twitter:card" content="summary_large_image" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <title>{title}</title>

  <style is:global>
    @import url('https://fonts.googleapis.com/css2?family=Instrument+Serif:ital@0;1&family=Outfit:wght@300;400;500;600;700&display=swap');
  </style>
</head>
<body>

  <!-- Navigation -->
  <nav class="nav">
    <div class="nav__inner container">
      <a href="/" class="nav__logo">
        <img src="/media/capflow_logo_1200x1200_transparent.png" alt="CapFlow logo" width="28" height="28" />
        <span>CapFlow</span>
      </a>

      <div class="nav__links">
        <a href="/#features" class:list={["nav__link"]}>Features</a>
        <a href="/help" class:list={["nav__link", { active: currentPath.startsWith('/help') }]}>Help Center</a>
        <a href="https://apps.shopify.com" class="btn btn--primary btn--sm" target="_blank" rel="noopener">
          Install on Shopify
        </a>
      </div>

      <button class="nav__mobile-toggle" aria-label="Toggle menu" id="mobile-toggle">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="3" y1="6" x2="21" y2="6"/>
          <line x1="3" y1="12" x2="21" y2="12"/>
          <line x1="3" y1="18" x2="21" y2="18"/>
        </svg>
      </button>
    </div>

    <div class="nav__mobile" id="mobile-menu">
      <a href="/#features">Features</a>
      <a href="/help">Help Center</a>
      <a href="https://apps.shopify.com" class="btn btn--accent" target="_blank" rel="noopener">Install on Shopify</a>
    </div>
  </nav>

  <main>
    <slot />
  </main>

  <!-- Footer -->
  <footer class="footer">
    <div class="footer__inner container">
      <div class="footer__top">
        <div class="footer__brand">
          <a href="/" class="nav__logo">
            <img src="/media/capflow_logo_1200x1200_transparent.png" alt="CapFlow logo" width="24" height="24" />
            <span>CapFlow</span>
          </a>
          <p>Capacity-based booking for activity venues.<br/>Built for Shopify.</p>
        </div>

        <div class="footer__links">
          <div class="footer__col">
            <h4>Product</h4>
            <a href="/#features">Features</a>
            <a href="/#pricing">Pricing</a>
            <a href="/#built-for">Use Cases</a>
          </div>
          <div class="footer__col">
            <h4>Support</h4>
            <a href="/help">Help Center</a>
            <a href="/help/getting-started">Getting Started</a>
            <a href="/help/faq-and-troubleshooting">FAQ</a>
          </div>
          <div class="footer__col">
            <h4>Legal</h4>
            <a href="/terms">Terms of Service</a>
            <a href="/privacy">Privacy Policy</a>
          </div>
        </div>
      </div>

      <div class="footer__bottom">
        <p>&copy; {new Date().getFullYear()} CapFlow. Built by <a href="mailto:hello@tinyagency.io">Tiny Agency</a>.</p>
      </div>
    </div>
  </footer>

  <script>
    const toggle = document.getElementById('mobile-toggle');
    const menu = document.getElementById('mobile-menu');
    toggle?.addEventListener('click', () => {
      menu?.classList.toggle('open');
    });
  </script>

</body>
</html>

<style is:global>
  /* Import the global styles */
  @import '../styles/global.css';

  /* Navigation */
  .nav {
    position: sticky;
    top: 0;
    z-index: 100;
    background: rgba(247, 245, 242, 0.85);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--border-light);
  }

  .nav__inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 64px;
  }

  .nav__logo {
    display: flex;
    align-items: center;
    gap: 10px;
    font-family: var(--font-body);
    font-weight: 700;
    font-size: 18px;
    color: var(--ink);
    text-decoration: none;
    letter-spacing: -0.02em;
  }

  .nav__logo:hover {
    color: var(--ink);
  }

  .nav__links {
    display: flex;
    align-items: center;
    gap: 32px;
  }

  .nav__link {
    font-size: 15px;
    font-weight: 500;
    color: var(--muted);
    text-decoration: none;
    transition: color 0.2s;
  }

  .nav__link:hover,
  .nav__link.active {
    color: var(--ink);
  }

  .btn--sm {
    padding: 9px 20px;
    font-size: 14px;
  }

  .nav__mobile-toggle {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    color: var(--ink);
    padding: 4px;
  }

  .nav__mobile {
    display: none;
    flex-direction: column;
    gap: 16px;
    padding: 16px 24px 24px;
    border-top: 1px solid var(--border-light);
  }

  .nav__mobile.open {
    display: flex;
  }

  .nav__mobile a {
    font-size: 16px;
    font-weight: 500;
    color: var(--ink-light);
    text-decoration: none;
  }

  /* Footer */
  .footer {
    background: var(--ink);
    color: rgba(255,255,255,0.6);
    padding: 64px 0 32px;
    margin-top: 80px;
  }

  .footer__top {
    display: flex;
    justify-content: space-between;
    gap: 48px;
    padding-bottom: 40px;
    border-bottom: 1px solid rgba(255,255,255,0.1);
  }

  .footer__brand {
    max-width: 300px;
  }

  .footer__brand .nav__logo {
    color: white;
    margin-bottom: 12px;
  }

  .footer__brand p {
    font-size: 14px;
    line-height: 1.6;
  }

  .footer__links {
    display: flex;
    gap: 64px;
  }

  .footer__col {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .footer__col h4 {
    font-family: var(--font-body);
    font-weight: 600;
    font-size: 13px;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: rgba(255,255,255,0.4);
    margin-bottom: 4px;
  }

  .footer__col a {
    font-size: 14px;
    color: rgba(255,255,255,0.65);
    text-decoration: none;
    transition: color 0.2s;
  }

  .footer__col a:hover {
    color: white;
  }

  .footer__bottom {
    padding-top: 24px;
    font-size: 13px;
  }

  .footer__bottom a {
    color: rgba(255,255,255,0.6);
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .footer__bottom a:hover {
    color: white;
  }

  @media (max-width: 768px) {
    .nav__links {
      display: none;
    }
    .nav__mobile-toggle {
      display: block;
    }
    .footer__top {
      flex-direction: column;
      gap: 40px;
    }
    .footer__links {
      gap: 40px;
      flex-wrap: wrap;
    }
  }
</style>
